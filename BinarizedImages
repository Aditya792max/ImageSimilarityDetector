import cv2

img = cv2.imread("/Users/adityavikramkirtania/Desktop/PythonDataAnalytics/ImageGames/imageSimilarityComparator/Signature1.jpeg", cv2.IMREAD_GRAYSCALE)

# Adaptive threshold adapts to local regions of the image
binary = cv2.adaptiveThreshold(img, 255, cv2.ADAPTIVE_THRESH_GAUSSIAN_C,
                               cv2.THRESH_BINARY, 11, 2)

cv2.imshow("Adaptive Binary Image", binary)
cv2.waitKey(0)
cv2.destroyAllWindows()


